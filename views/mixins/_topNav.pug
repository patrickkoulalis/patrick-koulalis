mixin topNav()
	nav(class="nav nav--home" role="navigation")
		a(class="logo-wrap" href="/")
			img(class="logo" src="/images/logo-white.svg" alt="Patrick Koulalis Logo")
			//- span #{page}
		div.nav-button
			span.nav-button__label Menu
			span.nav-button__bar
			span.nav-button__bar
			span.nav-button__bar
		.nav__menu
			a(href="/" class="nav__menu-link") Home
			//- a(href="/services/" class="nav__menu-link") Services
			a(href="/work/" class="nav__menu-link") Work
			//- a(href="/about/" class="nav__menu-link") About
			a(href="/solutions/" class="nav__menu-link") Solutions
			//- a(href="/blog/" class="nav__menu-link") Blog
			a(href="/estimates/" class="nav__menu-link") Estimates
			a(href="/contact/" class="nav__menu-link nav__menu-link--contact") Contact

			if !user
				span
					a(href="/account/signup/") Sign Up
					span or
					a(href="/account/login/" class="nav__menu-link") Login
			if user
				a(href="/account/" class="nav__menu-link nav__menu-link--contact") Account