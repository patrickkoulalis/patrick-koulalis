extends layout.pug
include mixins/_popupPaymentForm
block masthead
	div.masthead
		.masthead__inner
			h1.masthead__title Support Plans
			h2.masthead__text Don't get caught with your pants down!
		div.masthead__cta
			span Let's Get Started
block content
	section.super.super--white
		div.super__inner
			h2.super__title
				| Don't get caught with your pants <strong>down!</strong>
			div.super__content
				p When something goes wrong you can sleep soundly knowing that you're covered when you sign up with one of our support plans.
				a(href="#help") Having a website emergency?
	.max-width-wrapper.products
		each product in h.products
			if product.category == "Support Plans"
				div.product-card
					if(product.callout_text || product.discount)
						.product-card__callout
							if(product.callout_text)
								span.product-card__callout-text #{product.callout_text}
							if(product.discount)
								span.product-card__callout-text Save #{product.discount}%
					a.product-card__interval.product-card__interval--active Monthly
					a.product-card__interval Yearly
					span.product-card__title #{product.name}
					if(product.discount)
						span.product-card__original-price: span #{h.formatPrice(product.price)}/mo
					span.product-card__price #{h.formatPrice(product.price - ((product.discount / 100) * product.price))}/mo
					ul.product-card__list
						each feature in product.features
							li #{feature}
					button.button.button--blue(data-product-id=`${product.product_id}` data-price=`${h.formatPrice(product.price - ((product.discount / 100) * product.price))}` + '/mo') Sign Up for #{product.name} Support

	.feature-row.feature-row--col4.max-width-wrapper
			h2.feature-row__title Support Plan Features
			.feature-row__inner
				.feature-card
					include ../public/images/icons/code.svg
