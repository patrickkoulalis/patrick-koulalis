extends layout.pug

block header
	div.site-wrap.site-wrap--no-padding
		header(class="top" role="banner" aria-label="Header")
			nav(class="nav nav--home" role="navigation")
				a(class="logo-wrap" href="/")
					img(class="logo" src="/images/logo.svg" alt="Patrick Koulalis Logo")
					//- span #{page}
				div.nav-button
					span.nav-button__label Menu
					span.nav-button__bar
					span.nav-button__bar
					span.nav-button__bar
				.nav__menu
					a(href="/" class="nav__menu-link") Home
					a(href="/work/" class="nav__menu-link") Work
					a(href="/contact/" class="nav__menu-link") Contact
		block masthead
			div.masthead
				.masthead__inner
					span.masthead__title Hello.
					span.masthead__text My Name is Patrick. A <h1>Boston web designer &amp; developer</h1> crafting the web one awesome website at a time.
				if(page !== 'contact')
					//- a(class="button button__solid__green" href="/contact") Lets Work Together!
				a(href="#contact").masthead__cta
					span Let's Get Started

		block content
		main(role="main" aria-label="Main Content")

			section.super.super--blue.section
				div.super__inner
					h2.super__title.super__title--white
						|Be proud of your website.
					div.super__content
						p You put your heart and soul into your business, I'll do the same for your website.
						a(href="/work/").button.button--text-white.button__outline.button__outline--pink Contact Me

			section.services
				div.service-card.service-card--gray
					<svg class="service-card__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M269.9 364.6c1.4 6.4 2.1 13 2.1 19.7 0 81.2-54.2 127.7-134.8 127.7C41.5 512 0 435.1 0 347.6c10.4 7.1 46.9 36.5 58.7 36.5 7 0 13-4 15.5-10.6 23.6-62.2 66.5-76.5 112.9-77.4 15.6 33.8 46.1 59.6 82.8 68.5zM460.6 0c-14.4 0-27.9 6.4-38.2 15.7C228.2 190 208 194.1 208 245.4c0 48.8 40.5 90.6 90.2 90.6 59 0 93.2-43.4 200.6-244.8 7-13.7 13.2-28.5 13.2-43.9C512 19.7 487.3 0 460.6 0z"/></svg>
					h3.service-card__title Web Design
					ul.service-card__list
						li Website Design
						li Landing Pages
						li Microsites
						li Mobile App Design
						li Logo Design &amp; Branding
						li Email Templates
					a.button.button__solid.button__solid--blue(href="/contact/") Start your project today!
				div.service-card
					<svg class="service-card__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path d="M278.9 511.5l-61-17.7c-6.4-1.8-10-8.5-8.2-14.9L346.2 8.7c1.8-6.4 8.5-10 14.9-8.2l61 17.7c6.4 1.8 10 8.5 8.2 14.9L293.8 503.3c-1.9 6.4-8.5 10.1-14.9 8.2zm-114-112.2l43.5-46.4c4.6-4.9 4.3-12.7-.8-17.2L117 256l90.6-79.7c5.1-4.5 5.5-12.3.8-17.2l-43.5-46.4c-4.5-4.8-12.1-5.1-17-.5L3.8 247.2c-5.1 4.7-5.1 12.8 0 17.5l144.1 135.1c4.9 4.6 12.5 4.4 17-.5zm327.2.6l144.1-135.1c5.1-4.7 5.1-12.8 0-17.5L492.1 112.1c-4.8-4.5-12.4-4.3-17 .5L431.6 159c-4.6 4.9-4.3 12.7.8 17.2L523 256l-90.6 79.7c-5.1 4.5-5.5 12.3-.8 17.2l43.5 46.4c4.5 4.9 12.1 5.1 17 .6z"/></svg>
					h3.service-card__title Web Development
					ul.service-card__list
						li Website Development
						li eCommerce Websites
						li Content Management System
						li CMS and e-Commerce Integration
						li Installation &amp; Setup
						li Website Maintenance
					a.button.button__solid.button__solid--blue(href="/contact/") Start your project today!

			section.super.super--dark-blue.section
				div.super__inner
					h2.super__title.super__title--white
						|Take your business to the next level
					div.super__content
						p Below is a small selection from some of my most recent projects.
						a(href="/contact/").button.button--text-white.button__outline.button__outline--pink See More Work

			section.section
				.grid
					.work
						img(src="/images/site-mockups/kenosis-foundation.jpg", alt="Image of work")
						.work__inner
							h3.work__title Kenosis Foundation
							div.work__role Design &amp; Development
							a(href="https://kenosisfoundationindia.org/").button.button__outline.button__outline--pink Visit Site
					.work
						img(src="/images/site-mockups/visiblemsp.png", alt="Image of work")
						.work__inner
							h3.work__title Visible LLC
							div.work__role Design &amp; Development
							a(href="http://visiblemsp.com/").button.button__outline.button__outline--pink Visit Site
					.work
						img(src="/images/site-mockups/mazza_smith_home.png", alt="Image of work")
						.work__inner
							h3.work__title Mazza-Smith Dance
							div.work__role Design &amp; Development
							a(href="https://www.mazzasmithdance.com/").button.button__outline.button__outline--pink Visit Site

			section.section.section--latest-posts
				h2.section__title.section__title--pink.section__title--text-white Hot Articles, Videos and Tutorials
				.grid
					.post-previews
						div.post-previews__post
							div.categories
								span.cat.cat--video Video
							a(href="#" class="post-previews__title") Not All Blank Cassettes Are Created Equal Blank Cassettes
						div.post-previews__post
							div.categories
								span.cat.cat--tutorial Tutorial
							a(href="#" class="post-previews__title") Not All Blank Cassettes Are Created Equal
						div.post-previews__post
							div.categories
								span.cat.cat--article Article
							a(href="#" class="post-previews__title") Created Equal Blank Cassettes
						div.post-previews__post
							div.categories
								span.cat.cat--announcement Announcement
							a(href="#" class="post-previews__title") Created Equal Blank Cassettes


			//- Random Stats Counter
			section.counter
				.counter__inner
					//- coffee consumed
					.counter__stat
						div.counter__icon
							include ../public/images/icons/coffee.svg
						div.counter__count
							span.value 17,015
							span  ml
						div.counter__name Caffine Consumed

			//- Contact Lead In
			section#contact.super.super--pink.section
				div.super__inner
					h2.super__title.super__title--white
						|Let's Talk.
					p.super__content Send me a message below. If that's not your thing you can always email me directly at #[a(href="mailto:hello@patrickkoulalis.com" class="link link--text-white")|hello@patrickkoulalis.com]

			//- Contact
			section.contact.section
				div.grid
					form(class="contact-form" action="/contact" method="POST" role="form")
						div.contact-form__section
							h3.contact-form__section-title The Basics
							label(for="contactName") Your Name
							input(id="contactName" type="text" name="contactName" placeholder="Your Name" required)
							label(for="contactEmail") Your Email
							input(id="contactEmail" type="email" name="contactEmail" placeholder="Your Email" required)
							label(for="contactMsg")
							textarea(id="contactMsg" name="contactMsg", cols="30", rows="10" placeholder="Type Your Message" required)
						div.contact-form__section
							h3.contact-form__section-title Optional Stuff
							label(for="contactBudget") Estimated Budget - eg. $1500
							input(id="contactBudget" type="text" name="contactBudget" placeholder="Estimated Budget - eg. $1500")
							label(for="contactCompanyName") Company Name
							input(id="contactCompanyName" type="text" name="contactCompanyName" placeholder="Company Name")
							label(for="contactWebsiteUrl") Website URL
							input(id="contactWebsiteUrl" type="text" name="contactWebsiteUrl" placeholder="Website URL")
							label(for="contactPhoneNumber") Phone Number
							input(id="contactPhoneNumber" type="phone" name="contactPhoneNumber" placeholder="Phone Number")
							button.button.contact-form__send Ready. Set. Send!